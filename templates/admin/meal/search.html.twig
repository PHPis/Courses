    {#            {% for ingestion in ingestions %}#}
    {#                <option value="{{ ingestion.id }}">{{ ingestion.name }}</option>#}
    {#            {% endfor %}#}
    {#        </select>#}
    </div>
    <button type="submit" class="btn btn-primary"> <i class="fas fa-search"></i></button>
</form>