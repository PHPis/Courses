{% extends 'base.html.twig' %}

{% block title %}Hello UserDayMealController!{% endblock %}

{% block body %}
{% include "user/navbar.html.twig" %}
<div class="container">
    <h1 class="mt-4 mb-3">Add meal for day ({{ day.date|date('d \\of F, D') }})</h1>

    <h2>{{ ingestion.name }}</h2>

    <form action="">
        <div class="form-group mr-3">
            <label for="">Search meals recommended for :</label>
            <select class="custom-select" name="ingestion">
                {% for inges in day.ingestions %}
                    <option value="{{ inges.name }}"
                            {% if inges.name == ingestion.id %}
                                selected
                            {% endif %}>
                        {{ inges.name }}
                    </option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group mr-3">
            <input type="text" class="form-control" id="meal" name="meal" placeholder="Meal">
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>



</div>
{% endblock %}
